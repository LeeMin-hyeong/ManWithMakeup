<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_primary_variant"
    android:paddingVertical="40dp"
    android:paddingHorizontal="15dp">
    <RelativeLayout
        android:id="@+id/user_info_frame"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/round_corners_30dp"
        android:gravity="center|start">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="asdf"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/user_skin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="asdf"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/edit_user_info_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_edit_user_info"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/new_survey_button"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|start"
        android:paddingHorizontal="35dp"
        android:text="피부 타입 변경하기"
        android:textSize="17sp"
        android:background="@drawable/round_corners_100dp"/>
    <Button
        android:id="@+id/logout_button"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|start"
        android:paddingHorizontal="35dp"
        android:text="로그아웃"
        android:textSize="17sp"
        android:background="@drawable/round_corners_100dp"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center|start"
        android:paddingHorizontal="35dp"
        android:text="탈퇴하기"
        android:textSize="17sp"
        android:background="@drawable/round_corners_100dp"/>
</LinearLayout>